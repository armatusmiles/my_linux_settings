general {
        colors = true
        interval = 1
}

order += "wireless wlp8s0"
order += "ethernet enp9s0"
order += "battery 0"
order += "volume master"
order += "time"

wireless wlp8s0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp9s0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

